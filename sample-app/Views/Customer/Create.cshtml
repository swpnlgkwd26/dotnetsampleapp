@model CustomerAddModel
<h3>  Add New Product</h3>
@*Product Object*@
<form asp-action="Create" asp-controller="Customer">
    <div class="form-group">
        <label asp-for="@Model.CustomerName"></label>
        <input type="text" asp-for="@Model.CustomerName" class="form-control"
               placeholder="Customer Name" />
        <span asp-validation-for="@Model.CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address">Address</label>
        <input type="text" asp-for="@Model.Address" class="form-control"
               placeholder="Address" />
        <span asp-validation-for="@Model.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email">Email</label>
        <input type="text" asp-for="@Model.Email" class="form-control"
               placeholder="Email" />

        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.MobileNo">MobileNo</label>
        <input type="text" asp-for="@Model.MobileNo" class="form-control"
               placeholder="MobileNo" />
        <span asp-validation-for="@Model.MobileNo" class="text-danger"></span>
    </div>
   
    <button class="btn btn-primary"
            type="submit">
        Submit
    </button>
</form>
